//  Description:
//      Sass rendition of the stylesheet file for the user account section of the website.

#account-menu
  :background transparent url(../images/search-panel.png) top left no-repeat
  :width 950px
  :height 63px
  :margin
    :top -44px
    :left -15px
    :bottom 10px
  :font-size 12px
  #container
    :position relative
    :display block
    :top 11px
    :clear both
    :text-align center
    ul
      :margin-left 31px
      li
        :float left
        :margin-right 5px
        :font-weight 700
        a
          :background #eee
          :display block
          :font-size 12px
          :border 1px solid #888
          :border-right 3px solid #888
          //:border-right 2px solid #888
          :color #333
          :text-decoration none
          :height 19px
          :width 140px
          :text-align center
          &:hover
            :background-color #ecf7fc
#account-summary
  :margin
    :top 10px
    :left 3px
  #readout
    border: 4px solid #C1DF99
    table
      width: 100%
      th
        :background-color #C2EF86
        :border 1px solid #9BBF6B
        :padding 5px 10px
        a
          :color #333
          //color:#447505
          :text-decoration none
          span
            :float right
            :padding 0 4px
            :font
              :size 10px
              :weight 700
            :background-color #D6FF9F
      td
        :text-align right
        :background-color #F8FFEF
        :padding 10px
        :border 1px solid #9BBF6B
    #pending-cashback
      :display none
      :font
        :size 12px
        :weight 700
      :color #666
      :float right
      :border 2px solid #C1DF99
      :border-top 0
      :padding 3px 10px
      :margin
        :top 1px
        :right -1px
      :background-color #f3f3f3
  #month-lookup
    :margin-top 20px
    select
      :border 1px solid #ccc
    input[type="submit"]
      :border 1px solid #ccc
    #payments
      :padding-left 20px
      :margin-left 20px
      :border-left 1px solid #aaa
  .history
    :margin-top 20px
    .ttl
      :border 1px solid #6FA4CD
      :background-color #9BB9CF
      :color #29485F
      :padding 3px
      :width 910px
      :font
        :weight 700
        :size 13px
    table
      :border 1px solid #ccc
      :border-top 0
      :width 910px
      :margin
        :left 1px
      th
        :font
          :weight 400
          :size 13px
        :color #365268
        :background-color #EFF8FF
        :border-bottom 1px solid #ccc
        :padding 2px 0
      #no-records
        :font-style italic
        :padding 15px
  #start-saving
    :font-size 13px
    :color #666
    :margin
      :top 10px
      :left -18px
      :right -15px
    :background-color #f3f3f3
    :padding 3px 18px
    a
      :color #666
      &:hover
        :color #3c7099
  #help
    :font-size 13px
    :margin
      :top 10px
    #ttl
      :font-weight 700
      :font-size 15px
    ul
      :margin-left 10px
      li
        :margin-top 3px
#account-profile
  :margin
    :top 20px
    :left 3px
  :background transparent url(../images/acct-propic.png) 0px 0px no-repeat
  :padding-left 120px
  :font-size 13px
  h2
    :color #447505
    :font-size 22px
  #cashback-summary
    :float right
    :border 3px solid #C1DF99
    :color #333
    li
      :display block
      :clear right
      :border 1px solid #9BBF6B
      :border-top 0
      :background-color #F8FFEF
      :padding 5px 20px
      span
        :float right
        :margin-left 20px
      a
        :float right
        :color #333
        :text-decoration none
        :padding 0 4px
        :font
          :size 10px
          :weight 700
        :background-color #D6FF9F
        :margin 0 -5px 0 15px
    #ttl
      :font-weight 700
      :text-align center
      :border-top 1px solid #9BBF6B
      :background-color #C2EF86
    #lifetime
      :font-weight 700
  #download
    :left auto
    :top auto
    :position absolute
    :width 202px
    :border 1px solid #ccc
    :border-bottom 2px solid #ccc
    :padding 5px 10px
    :text-decoration none
    :text-align center
    :margin
      :top 20px
    :background-color #f7f7f7
    &:hover
      :background-color #E5F9FB
      :color #3c7099
      :border 1px solid #999
      :border-bottom 2px solid #999
  #member-since
    :color #666
    :margin 3px 0 10px 0
    span
      :font-weight 700
  #cao-not-installed, #cao-installed
    :margin 0 0 25px 0
    :font-weight 700
    #ttl
      :padding-left 18px
    p
      :color #666
      :font-size 11px
      :line-height 1.2em
  #cao-not-installed #ttl
    :background transparent url(../images/ico-x.gif) 0px 1px no-repeat
    :color #c00
  #cao-installed #ttl
    :background transparent url(../images/ico-check.gif) 0px 1px no-repeat
    :color #58a722
  #member-info, #birthday
    :border 1px solid #ccc
    :width 450px
    :line-height 180%
    :padding-bottom 20px
    :margin-bottom 25px
    #update
      :float right
      :background-color white
      :margin
        :top -14px
        :right 10px
      :font-size 11px
      :padding 0 5px
    #ttl
      :width 115px
      :margin
        :top -14px
        :bottom 5px
        :left 10px
      :background-color white
      :padding-left 8px
      :color #333
      :font-weight 700
    p
      :padding 0 10px
      span
        :color #333
        :font-weight 700
      usedfor
        :float left
        :font-size 10px
        :color #666
        :font-weight 700
        :margin-top -8px
  #update a
    :display block
    :margin-bottom 20px
    :text-decoration none
    :border 1px solid #ccc
    :border-bottom 2px solid #ccc
    :padding 2px 10px
    :width= 450px - 20px
    :background-color #f7f7f7
    &:hover
      :background-color #E5F9FB
      :color #3c7099
      :border 1px solid #999
      :border-bottom 2px solid #999
